{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "jekyll: serve in development",
            "type": "shell",
            "command": "bundle exec jekyll serve -l -o --trace --draft",
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "jekyll: serve in production",
            "type": "shell",
            "command": "JEKYLL_ENV=production bundle exec jekyll serve -l -o --trace --draft",
            "windows": {
                "command": "set JEKYLL_ENV=production && bundle exec jekyll serve -l -o --trace --draft"
            },
            "group": "test",
            "problemMatcher": []
        },
        {
            "label": "jekyll: build in production",
            "type": "shell",
            "command": "JEKYLL_ENV=production bundle exec jekyll build --trace",
            "windows": {
                "command": "set JEKYLL_ENV=production && bundle exec jekyll build --trace"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "pagefind: build index",
            "type": "shell",
            "command": "rm -rf assets/pagefind && pagefind --site _site --output-path assets/pagefind",
            "group": "build",
            "problemMatcher": []
        }
    ]
}